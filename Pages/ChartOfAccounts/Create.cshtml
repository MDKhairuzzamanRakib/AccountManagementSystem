@page
@model CreateModel
@{
    ViewData["Title"] = "Create Account";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Account.AccountCode" class="control-label"></label>
                <input asp-for="Account.AccountCode" class="form-control" />
                <span asp-validation-for="Account.AccountCode" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Account.AccountName" class="control-label"></label>
                <input asp-for="Account.AccountName" class="form-control" />
                <span asp-validation-for="Account.AccountName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Account.ParentAccountId" class="control-label"></label>
                <select asp-for="Account.ParentAccountId" class="form-control" asp-items="Model.ParentAccounts">
                    <option value="">-- Select Parent Account --</option>
                </select>
                <span asp-validation-for="Account.ParentAccountId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Account.AccountType" class="control-label"></label>
                <input asp-for="Account.AccountType" class="form-control" />
                <span asp-validation-for="Account.AccountType" class="text-danger"></span>
            </div>
            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Account.IsActive" /> @Html.DisplayNameFor(model => model.Account.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}