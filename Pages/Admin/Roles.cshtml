@page
@model RolesModel
@{
    ViewData["Title"] = "Manage Roles";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-3">
                <input asp-for="Input.RoleName" class="form-control" placeholder="New role name" />
                <button type="submit" class="btn btn-primary">Add Role</button>
            </div>
            <span asp-validation-for="Input.RoleName" class="text-danger"></span>
        </form>
    </div>
</div>

<div class="table-responsive mt-4">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Role Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@role.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this role?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>